{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=marketdata_dev;Username=postgres;Password=postgres",
    "Redis": "localhost:6379,abortConnect=false"
  },
  "JwtSettings": {
    "SecretKey": "DEV_SECRET_KEY_FOR_DEVELOPMENT_ONLY_MIN_32_CHARS_LONG",
    "AccessTokenExpirationMinutes": 120,
    "RefreshTokenExpirationDays": 30
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:5173",
      "http://localhost:8080"
    ]
  },
  "MarketDataProcessing": {
    "Simulation": {
      "Enabled": true,
      "TicksPerSecond": 1000
    },
    "UsePersistentRepositories": false
  }
}
