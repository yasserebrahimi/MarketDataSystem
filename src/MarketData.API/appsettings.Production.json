{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Error",
        "System": "Error",
        "Microsoft.EntityFrameworkCore": "Error",
        "MarketData": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST};Port=${DB_PORT};Database=${DB_NAME};Username=${DB_USER};Password=${DB_PASSWORD};SSL Mode=Require;Trust Server Certificate=true",
    "Redis": "${REDIS_HOST}:${REDIS_PORT},password=${REDIS_PASSWORD},ssl=true,abortConnect=false"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}",
    "AccessTokenExpirationMinutes": 30,
    "RefreshTokenExpirationDays": 3
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 500
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "${CORS_ALLOWED_ORIGIN}"
    ]
  },
  "MarketDataProcessing": {
    "Partitions": 0,
    "ChannelCapacity": 500000,
    "Simulation": {
      "Enabled": false
    },
    "UsePersistentRepositories": true
  }
}
